<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/cart_total_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#F0F0F0"
		android:padding="10dp">

		<TextView
			android:id="@+id/cart_count_total"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="数量总计:2件"
			android:textColor="#000"/>

		<TextView
			android:id="@+id/cart_money_total"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:singleLine="true"
			android:text="商品总金额(不含运费):576.00"
			android:textColor="#000"/>

	</RelativeLayout>

	<ListView
		android:id="@+id/lv_car_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/cart_total_container"
		android:layout_weight="1"/>


</RelativeLayout>