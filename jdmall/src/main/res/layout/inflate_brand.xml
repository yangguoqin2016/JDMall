<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000">

                <TextView android:id="@+id/brand_tv_tongbu"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="15dp"
                          android:drawableLeft="@mipmap/tuijianpinpaizhengpinbaozheng"
                          android:drawablePadding="7dp"
                          android:gravity="center_vertical"
                          android:padding="10dp"
                          android:text="正品保证"
                          android:textColor="#fff"
                          android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@id/brand_tv_tongbu"
                    android:drawableLeft="@mipmap/tuijianpinpaiguanwangtongbu"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="官网同步"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/brand_viewpager"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai1"/>


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai3"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai4"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/tuijianpinpaipinpaifengexianshuipin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai5"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai6"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/tuijianpinpaipinpai7"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="更多品牌"
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@mipmap/tuijianpinpaidatuzhanshikuang">

                <ImageView android:id="@+id/brand_iv_gonggao2"
                           android:layout_width="wrap_content"
                           android:layout_height="30dp"
                           android:src="@mipmap/tuijianpinpaigonggao2"/>

                <ImageView android:id="@+id/brand_iv_gonggao1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="10dp"
                           android:src="@mipmap/tuijianpinpaigonggao1"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="10dp"
                          android:layout_toRightOf="@id/brand_iv_gonggao1"
                          android:text="2016年3月5日LG正式入驻品牌馆"
                          android:textColor="#f00"
                          android:textSize="12sp"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginTop="10dp"
                      android:text="品牌特卖"
                      android:textColor="#dd000000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/tuijianpinpaipinpaitemaifengexian"/>

            <ListView android:id="@+id/brind_listview"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
            </ListView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>