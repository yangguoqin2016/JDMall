<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="20dp"
              android:orientation="vertical"
    >

    <android.support.v4.view.ViewPager android:id="@+id/detail_vp"
                                       android:layout_width="match_parent"
                                       android:layout_height="160dp"
        />

    <!--装点的容器-->
    <LinearLayout android:id="@+id/detail_ll"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
        >


    </LinearLayout>

    <TextView android:id="@+id/detail_tv_title" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:text="羊毛衫羊毛衫羊毛衫"
              android:textColor="#000"
        />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="3dp"
                  android:paddingTop="3dp"
        >
        <TextView android:id="@+id/detail_tv_price" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="市场价： ￥250"
                  android:textColor="#000"
            />

        <TextView android:id="@+id/detail_tv_vipprice" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="会员价： ￥5"
                  android:textColor="#000"
            />


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:paddingBottom="3dp"
                  android:paddingTop="3dp"
        >
        <TextView android:id="@+id/detail_tv_kind" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="颜色分类："
                  android:textColor="#000"
            />

        <RadioGroup android:id="@+id/detail_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:checked="true"
                         android:text="灰色"

                />

            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:text="黑色"

                />


        </RadioGroup>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="3dp"
                  android:paddingTop="3dp"
        >
        <TextView android:id="@+id/detail_tv_size" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="尺码：均码"
                  android:textColor="#000"
            />

        <TextView android:id="@+id/detail_tv_vipprice" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:text="评分：★★★★★"
                  android:textColor="#000"
            />


    </LinearLayout>

    <TextView android:id="@+id/detail_tv_count" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:text="数量：250 件"
              android:textColor="#000"

        />

    <TextView android:id="@+id/detail_tv_evaluation" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingBottom="3dp"
              android:paddingTop="3dp"
              android:text="用户评价：共250人评价"
              android:textColor="#000"

        />


</LinearLayout>