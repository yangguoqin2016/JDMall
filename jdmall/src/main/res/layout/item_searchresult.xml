<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_searchresult_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_searchresult_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬装新款羊毛衫羊毛衫羊毛衫"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/item_searchresult_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥334.0"
                    android:textColor="#7f00"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/item_searchresult_tv_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="￥334.0"
                    android:textColor="#7f00"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/item_searchresult_tv_valuation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有250条评价"
                    android:textColor="#000"
                    android:textSize="17sp"

                    />

                <ImageView
                    android:layout_marginRight="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotationX="0.5"
                    android:rotationY="0.5"
                    android:rotation="-90"
                    android:src="@mipmap/lishishousuo_xialajiantou"
                    />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#2000"/>
</LinearLayout>