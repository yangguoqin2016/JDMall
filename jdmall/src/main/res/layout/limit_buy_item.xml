<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/limit_item_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/limit_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粉色毛衣"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/limit_item_tv_lp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥39.9"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/limit_item_tv_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="￥166" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/limit_item_pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/limit_item_tv_saled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已抢购188件" />

        <Button
            android:id="@+id/limit_item_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_bg_normal"
            android:text="立即抢购"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>