<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人:  "
                android:textColor="#000"
                android:textSize="20sp"/>
        </RelativeLayout>

        <EditText
            android:textColor="#000"
            android:id="@+id/addr_add_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="(必填)"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="18sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/neirong_fengexian_shangmian60px_shurukuang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:  "
                android:textSize="20sp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/addr_add_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#000"
            android:hint="(必填)"
            android:phoneNumber="true"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="18sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/neirong_fengexian_shangmian60px_shurukuang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省市区:  "
                android:textSize="20sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/addr_add_tv_province"
            android:drawableLeft="@mipmap/lishishousuo_xialajiantou"
            android:textColor="#000"
            android:text="点击选择所在地"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/neirong_fengexian_shangmian60px_shurukuang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址:  "
                android:textSize="20sp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/addr_add_et_detailaddr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#000"
            android:hint="(必填)"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="18sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/neirong_fengexian_shangmian60px_shurukuang"/>


    <View
        android:id="@+id/vMasker"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:layout_margin="50dp"
        android:id="@+id/tvTime"
        android:text="时间"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


</LinearLayout>