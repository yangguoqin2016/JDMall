<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#99000000"
        android:text="反馈内容(你可以输入商品以及对客户端的意见)"
        android:textSize="14sp"/>
    <EditText
        android:padding="5dp"
        android:gravity="left"
        android:layout_margin="5dp"
        android:hint="用户评价输入框"
        android:textColorHint="#66000000"
        android:textColor="#99000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/yonghufankuii_lianxfangshi"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#99000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系方式"
        android:textSize="14sp"/>

    <EditText
        android:padding="5dp"
        android:gravity="left"
        android:layout_margin="5dp"
        android:background="@mipmap/yonghufankuii_lianxfangshi"
        android:hint="您的姓名,手机号,邮箱"
        android:textColorHint="#66000000"
        android:textColor="#99000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/user_feedback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_red_bg_normal"/>
</LinearLayout>
