<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/limit_buy_item_bg"
    android:layout_height="match_parent">
   <ImageView
       android:layout_margin="8dp"
       android:scaleType="fitXY"
       android:id="@+id/scan_record_iv"
       android:src="@mipmap/app_login"
       android:layout_weight="2"
       android:layout_width="0dp"
       android:layout_height="100dp" />
    <LinearLayout
       android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="棉服"
            android:id="@+id/scan_record_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:textColor="#ff0000"
            android:textSize="25sp"
            android:text="￥1999"
            android:id="@+id/scan_record_tv_price_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:text="￥1999"
            android:id="@+id/scan_record_tv_price_market"
            android:layout_below="@id/scan_record_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>